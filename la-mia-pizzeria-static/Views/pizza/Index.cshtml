@using la_mia_pizzeria_static.data
@model List<Pizze>
@{
    ViewData["Title"] = "Home Page";
    Layout = null;
}
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="./css/Mio.css" />
</head>

<div class="sfondo">
    <div class="container text-center">
        <div class="collapse navbar-collapse d-block" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" aria-current="page" href="@Url.Action("Index", "Pizza")">Admin</a>
                </li>
                <!-- code omitted -->
                <partial name="_LoginPartial" />
            </ul>
        </div>
        <a class="btn btn-primary mb-4" href="@Url.Action("Create", "Pizza")">Creazione pizze</a>
        <div class="scolla">
            <div class="row">
                @{
                    foreach (var pizza in Model)
                    {
                        <div class="col-md-4">
                            <div class="card">
                                <img src="@pizza.UrlFoto" class="card-img-top" alt="@pizza.Nome">
                                <div class="card-body">
                                    <h5 class="card-title">@pizza.Nome</h5>
                                    <p class="card-text">@pizza.Descrizione</p>
                                    <p class="card-text"><strong>Prezzo:</strong> @pizza.Prezzo $</p>
                                    <a href="@Url.Action("PerId", "Pizza", new { id = pizza.ID })" class="btn btn-info">Dettaglio pizza</a>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
